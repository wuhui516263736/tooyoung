<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Rest Web Application</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
            classpath:web-context.xml
		</param-value>
	</context-param>
	
	<listener>
		<listener-class>com.tooyoung.web.base.ContextLoaderListener</listener-class>
	</listener>

	<!-- 
	<listener>
	    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	 -->

	<servlet>
		<servlet-name>restServlet</servlet-name>
		<!-- com.sun.jersey.spi.spring.container.servlet.SpringServlet -->
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<!-- <init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.tooyoung.web.rest.hello;com.tooyoung.web.rest.timeline</param-value>
		</init-param> -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>restServlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<!-- com.weibo.api.spi.MediaTypeRequestFilter -->


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/500.jsp</location>
	</error-page>
  
</web-app>
